    <div class="table-responsive">

      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">Codigo de Retiro</th>
            <th scope="col">Fecha de retiro</th>
            <th scope="col">Unidades retiradas</th>
            <th scope="col">Producto retirado</th>
            <th scope="col" class="text-end">Opciones</th>
          </tr>
        </thead>

        <tbody>
          <% insumos.forEach(element=> { %>
            <tr class="align-middle">
              <td>
                <%= element.Fecha_Retiro %>
              </td>
              <td>
                <%= element.Unidades_Retiradas %>
              </td>
              <td>
                <%= element.Producto %>
              </td>
              <td>
                <%= element.Motivo_Anular %>
              </td>

              <td class="text-end">

                <div class="d-flex flex-row justify-content-end gap-2">

                  <a href="/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                    <i class="bi bi-eye"></i>
                  </a>


                </div>


              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>