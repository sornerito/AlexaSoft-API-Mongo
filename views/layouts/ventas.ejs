            <% datos.forEach(element=> { %>
                <tr class="align-middle">
                    <td>
                        <%= element.numeroFactura %>
                    </td>
                    <td>
                        <%= element.Fecha %>
                    </td>
                    <td>
                        <%= element.Colaborador.Nombre_Colaborador %>
                    </td>
                    <td>
