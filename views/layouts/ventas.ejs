                    </td>
                    <td>
                        <%= "Fecha Creacion: " + element.Cotizacion.Fecha_Creacion %> <br>
                            <%= "Fecha Finalización: " + element.Cotizacion.Fecha_Finalizacion %> <br>
                                <%= "Estado Cotización: " + element.Cotizacion.Estado %>
                    </td>

