<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="Realiza compra"></h1>
</div>

<form action="/addcompra" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="Productos">Seleccionar Producto</label>
            <select class="form-control" id="Productos" name="Productos" required>
                <!-- Aquí se mostrarán las opciones de productos -->
                <% productos.forEach(producto => { %>
                    <option value="<%= Producto._id %>"><%= Productos.Nombre_Producto %></option>
                <% }); %>
            </select>
        </div>
        <div class="col">
            <label for="Proveedor">Seleccionar Proveedor</label>
            <select class="form-control" id="Proveedor" name="Proveedor" required>
                <!-- Aquí se mostrarán las opciones de productos -->
                <% Proveedor.forEach(Proveedor => { %>
                    <option value="<%= Proveedor._id %>"><%= Proveedor.Nombre_Proveedor %></option>
                <% }); %>
            </select>
        </div>
        <div class="col">
            <label for="Precio">Precio</label>
            <input type="text" class="form-control" id="precio" name="precio"
                placeholder="precio" required>
        </div>
        <div class="col">
            <label for="Motivo_Anular">Motivo_Anular</label>
            <input type="text" class="form-control" id="Motivo_Anular" name="Motivo_Anular"
                placeholder="Motivo_Anular" required>
        </div>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Añadir Compra</button>
    </div>
</form>
